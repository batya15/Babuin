{
  "path": {
    "src": "src",
    "build": "build",
    "release": "release",
    "temp": "temp",
    "jsHint": ["src/**/*.js", "!**/bower_components/**", "!**/vendor/**", "!**/qunit.js"],
    "bower_components": "src/bower_components",
    "vendor_js": "src/vendor",
    "scssFiles": ["src/**/*.{scss,sass}", "!**/bower_components/**"],
    "jadeHtmlFiles": ["src/**/*.html.jade", "!**/bower_components/**"],
    "jadeFiles": ["src/**/*.jade", "!**/bower_components/**", "!**/*.html.jade"]
  },
  "bower": "src/bower.json",

  "staticFiles": [
    "src/**/*.{css,scss,sass}",
    "src/**/*.js",
    "src/**/*.html",
    "src/**/*.svg",
    "src/**/*.gif",
    "src/**/*.{jpg,jpeg}",
    "src/**/*.{ttf,woff,eot}*",
    "src/**/*.png",
    "!**/bower_components/**"
  ],

  "staticRelease": [
    "build/**/*.svg",
    "build/**/*.gif",
    "build/**/*.json",
    "build/**/*.{jpg,jpeg}",
    "build/**/*.{ttf,woff,eot}*",
    "build/**/*.png",
    "!**/test/**"
  ],

  "gzipFiles": "**/*.{js,html,svg,css,ttf,woff,eot,json}*"
}